<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FragmentHeaderStyle">
        <item name="android:padding">@dimen/fragment_header_padding</item>
        <item name="android:textSize">@dimen/fragment_header_text_size</item>
        <item name="android:background">@color/fragment_header_background</item>
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <style name="EditHintStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/hint_text_size</item>
        <item name="android:paddingStart">@dimen/edit_hint_padding</item>
        <item name="android:paddingEnd">@dimen/edit_hint_padding</item>
    </style>

    <style name="EditFieldStyle">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:paddingStart">@dimen/edit_padding</item>
        <item name="android:paddingEnd">@dimen/edit_padding</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>